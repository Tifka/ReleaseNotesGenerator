<Window x:Class="Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="700">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock>TFS Url</TextBlock>
            <TextBox Name="TfsUrl" Text="{Binding Path=Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            <Button Content="Connect" Click="ConnectTfsButton"></Button>
        </StackPanel>
        <StackPanel Name="ProjectStack" Visibility="Hidden" Orientation="Horizontal">
            <TextBlock>Project</TextBlock>
            <ComboBox Name="ProjectCombo" SelectedItem="{Binding Path=ProjectSelected, Mode=TwoWay}" Width="200" SelectionChanged="ProjectSelected"/>
        </StackPanel>
        <StackPanel Name="TfsProjectStack" Visibility="Hidden" Orientation="Horizontal">
            <TextBlock>TFS project</TextBlock>
            <TextBox Name="TfsProject" Text="{Binding Path=TfsProject, Mode=TwoWay}" Width="200" />
        </StackPanel>
        <StackPanel Name="IterationStack" Visibility="Hidden" Orientation="Horizontal">
            <TextBlock>Iteration</TextBlock>
            <ComboBox Name="IterationCombo" SelectedItem="{Binding Path=IterationSelected, Mode=TwoWay}" Width="200" SelectionChanged="IterationSelected"/>
        </StackPanel>
        <StackPanel Name="BranchStack" Visibility="Hidden" Orientation="Horizontal">
            <TextBlock>Branch</TextBlock>
            <TextBox Name="Branch" Text="{Binding Path=TfsBranch, Mode=TwoWay}" Width="200" />
        </StackPanel>
        <StackPanel Name="ChangesetFromStack" Visibility="Visible" Orientation="Horizontal">
            <TextBlock>Changeset from</TextBlock>
            <xctk:IntegerUpDown Name="ChangesetFrom" Value="{Binding Path=ChangesetFrom, Mode=TwoWay}" ShowButtonSpinner="False"  Width="200" LostFocus="GetChangesetFrom"  />
            <CheckBox Content="Include" VerticalContentAlignment="Center" Name="IncludeFrom" IsChecked="True"/>
        </StackPanel>
        <TextBlock Name="ChangesetFromText"/>
        <StackPanel Name="ChangesetToStack" Visibility="Visible" Orientation="Horizontal">
            <TextBlock>Changeset to</TextBlock>
            <xctk:IntegerUpDown Name="ChangesetTo" Value="{Binding Path=ChangesetTo, Mode=TwoWay}" ShowButtonSpinner="False" Width="200" LostMouseCapture="GetChangesetTo" />
            <CheckBox Content="Include" VerticalContentAlignment="Center" Name="IncludeTo" IsChecked="True"/>
        </StackPanel>
        <TextBlock Name="ChangesetToText"/>
        <Button Name="Convert" Content="Get changesets and Work Items" Click="ConvertClicked"/>

        <StackPanel Name="ReleaseNameStack" Visibility="Visible" Orientation="Horizontal">
            <TextBlock>ReleaseName</TextBlock>
            <TextBox Name="ReleaseName" Width="200" />
        </StackPanel>
        <StackPanel Name="ReleaseDateStack" Visibility="Visible" Orientation="Horizontal">
            <TextBlock>Release Date</TextBlock>
            <DatePicker Name="ReleaseDate" Width="200" />
        </StackPanel>
        <xctk:CheckListBox x:Name="_listBox" 
                           Height="250"
                           DisplayMemberPath="Comment"
                           ValueMemberPath="ChangesetId"  />
    </StackPanel>
</Window>
